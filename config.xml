<?xml version='1.0' encoding='utf-8'?>
<widget id="com.andypan.cubane.photohunt" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LM Photo Hunt</name>
    <description>
        Photo treasure hunting game of Learn Mode Meet 2015 Summer.
    </description>
    <author email="andy0130tw@yahoo.com.tw" href="http://hsnu.qov.tw/">
        Andy Pan
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
